<h1><%= markdown_to_html @wiki.title %></h1>

<div class="row">
  <div class="col-8-md">
    <% if policy(@wiki).edit? %>
      <%= link_to "Edit Wiki", edit_wiki_path, class: 'btn btn-success' %>
    <% end %>
    <% if policy(@wiki).destroy? %>
      <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this Wiki?'} %>
    <% end %>
    <h5><%= markdown_to_html @wiki.body %></h5>
    <% if (current_user == @wiki.user) %>
       <small>
         <%= link_to "Delete", @wiki, method: :delete, data: {confirm: 'Are you sure you want to delete this Wiki?'} %>
       </small>
     <% end %>
  </div>
</div>
