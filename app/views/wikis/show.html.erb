<h1><%= @wikis.title %></h1>
<% if current_user %>
  <div class="col-8-md">
    <%= link_to "Edit Wiki", edit_wiki_path, class: 'btn btn-success' %>
    <%= link_to "Delete Wiki", @wikis, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this topic?' } %>
  </div>
<div class="row">
  <div class="col-md-8">
    <p class="lead">
      <%= @wikis.body %>
    </p>
    <small>
      Created by: <%=  @wikis.user %> <%= time_ago_in_words(@wikis.created_at) %> ago,
      <%= link_to "Delete", @wikis, method: :delete, data: {confirm: 'Are you sure you want to delete this Wiki?'} %>
    </small>
<% end %>
</div>
