<h1>Wikis</h1>

 <div class="row">
   <div class="col-md-8">
     <% if current_user %>
     <div class="col-md-4">
       <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-success' %>
     </div>
     <% end %>
     <% @wikis.each do | wiki | %>
       <div class="media">
         <div class="media-body">
           <h4 class="media-heading">
             <%= link_to wiki.title, wiki %>
          </h4>
             <small>
               Created by: <%= current_user.name %> <%= time_ago_in_words(wiki.created_at) %> ago,
               <br/>
             </small>
             <h5><%= wiki.body %></h5>
         </div>
       </div>
       <% end %>
   </div>
 </div>
